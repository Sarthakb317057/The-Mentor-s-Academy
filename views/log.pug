doctype html
head
  title Login Form
  // Place your kit's code here
  script(src='https://kit.fontawesome.com/64a80a3748.js' crossorigin='anonymous')
  link(rel='stylesheet' href='../static/login.css')
img.logo(src='../static/logo.png' alt=' logo')
.container
  h1 Log In
  form(action="/log" method="post" class="form")
    .box
      i.fa.fa-envelope
      input#email(type='email' name='email' placeholder='Enter Your Email')
    .box
      i.fa.fa-key
      input#password(type='password' name='password' placeholder='Enter Your Password')
    button.btn Log In
